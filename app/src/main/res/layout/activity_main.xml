<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    >
     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:layout_height="match_parent">
          <Button
              android:text="成功按钮动画"
              android:onClick="success"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
          <RelativeLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >


               <com.ken.customview.SearchView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />


               <com.ken.customview.Bezier3
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <Button
                   android:id="@+id/btn"
                   android:text="点击进入贝塞尔曲线示例"
                   android:onClick="jump2Food"
                   android:layout_alignParentBottom="true"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

               <Button
                   android:textAllCaps="false"
                   android:text="Path练习"
                   android:onClick="jump2Path"
                   android:layout_above="@id/btn"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

               <TextView
                   android:id="@+id/text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

               <com.ken.customview.PlaneView
                   android:id="@+id/plane"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <RelativeLayout
                   android:clickable="true"
                   android:onClick="jump2Food"
                   android:background="@color/colorAccent"
                   android:layout_width="match_parent"
                   android:layout_height="60dp">
                    <View
                        android:onClick="jump2Path"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
               </RelativeLayout>
               <Button
                   android:textAllCaps="false"
                   android:text="爱彼迎动画库学习"
                   android:onClick="airbnb"
                   android:layout_above="@id/btn"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
          </RelativeLayout>


     </LinearLayout>

</ScrollView>
